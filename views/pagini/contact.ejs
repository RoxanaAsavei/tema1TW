    <div class = "sectionOne" >
        <div class ="container">
        <form action="/submit" method="post" id = "formContact" class = "textForm">
            <h1 class = "subtitlu">Contact</h1>
            <div class = "inputControl">
                <label for="name">First name:</label>
                <input type="text" name = "firstName" id = "firstName" />
                <div class = "error"></div> 
            </div>


            <div class = "inputControl">
                <label for="name">Last name:</label>
                <input type="text" name = "lastName" id = "lastName" /> 
                <div class = "error"></div> 
            </div>


            <div class = "inputControl">
                <label for="mail">Email:</label>
                <input type="text" id = "mail" name = "user_email"/>
                <div class = "error"></div> 
            </div>

            <div class = "inputControl">
                <label for="message">Your thoughts:</label>
                <textarea id="message" name="message" rows="4" cols="40"></textarea>
            </div>

                <fieldset class = "select noBorder" required>
                    <legend>Do you want to receive the latest news via email?</legend>
                    <p>
                        <input type="radio" name="option" id="aff" value="yes" required/>
                        <label for="aff">Yes</label>
                    </p>
    
                    <p>
                        <input type="radio" name="option" id="neg" value="no" />
                        <label for="neg">No</label>
                    </p>
                </fieldset>

            <button type="submit" class = "dark-btn">Submit</button>
        </form>
        </div>
    </div>

